<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit member details</title>
    <link rel="stylesheet" href="/static/css/upload.css">
</head>
<body>

<div class="loader">
    <img src="/static/loader.svg" alt="">
</div>
<div class="cancel_icon">
    <a class="cancel" href="/"><img class="home_icon" src="../../static/clear.svg"></a>
</div>
<h1>Edit details!</h1>
<form method="post" enctype="application/x-www-form-urlencoded" action="<%= "/editMember/" + data.id %>">
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= data.name %>">

    <label for="phone">Phone: (optional)</label>
    <input type="text" name="phone">

    <label for="email">Email: (optional)</label>
    <input type="text" name="email">


    <!--<label for="file">Image:</label>-->
    <!--<input type="file" name="file" value="file">-->

    <input type="submit" value="Update">
</form>


<script>
    document.querySelector("form").onsubmit = () => {
        document.querySelector(".loader").classList.add('show');
        alert("Thank you!")
        return true;
    }
</script>
</body>
</html>
